    private void OnExpandCollapseClick()
    {
        _expanded = !_expanded;
        _expandedClas = _expanded ? "height: 15rem;" : string.Empty;
    }

    private async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
