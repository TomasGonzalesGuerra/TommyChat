                        </MudChatBubble>
                    }
                </MudChat>

                <MudItem Class="d-flex justify-space-between align-center mt-2">
                    <MudTextField @bind-Value="mensajeTemporal[usuario]" Label="Mensaje" Variant="Variant.Outlined"
