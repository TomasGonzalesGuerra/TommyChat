@foreach (var usuario in chatsAbiertos.Keys)
{
    string estilo = $"position: absolute; bottom: 0; right: {20 * chatsAbiertos.Keys.ToList().IndexOf(usuario)}rem; width:20rem;";

    <MudPaper Class="pa-2" Style="@estilo">
